import time
import random
characters = "+-/*!&$#?=@abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
password = ""
for i in range(12):
        password += random.choice(characters)
ask = input("¿necesitas una contraseña?")
if ask == "si":
    print("Un momento")
    time.sleep(3)
    print(password)
elif ask == "SI":
    print("Un momento")
    time.sleep(3)
    print(password)
elif ask == "Si":
    print("Un momento")
    time.sleep(3)
    print(password)
else:
    print("SyntaxError: bad token on line ##")
